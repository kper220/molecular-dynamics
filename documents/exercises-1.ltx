\begin{exercise}
With the Hamiltonian of a one-dimensional harmonic oscillator with spring potential $U(q) = \Omega^2q^2/2$, 
\begin{equation}
H(q, p) = \dfrac{p^2}{2m} + \dfrac{\Omega^2q^2}{2},
\end{equation}
where $(q, p)\in\mathbb{R}^2$, show that $\langle q\rangle = \langle p\rangle = 0$, $\langle\Omega^2q^2\rangle = \langle p^2/m\rangle = k_BT$, and $\langle qp\rangle = 0$.
\end{exercise}

We first solve for the distribution,
\begin{equation*}
\rho_\beta = \dfrac{1}{Z}\exp(-\beta H),
\end{equation*}
where the partition function is
\begin{equation*}
Z = \iint d\omega\exp(-\beta H).
\end{equation*}
Separating integrands for $q$ and $p$ yields
\begin{equation*}
Z = \int_{-\infty}^\infty dq\exp(-\beta\Omega^2q^2/2)\int_{-\infty}^\infty dp\exp(-\beta p^2/2m).
\end{equation*}
We know
\begin{equation}
\int_{-\infty}^\infty dx\exp(-x^2) = \sqrt{\pi}.
\end{equation}
Let $x^2 = \beta\Omega^2q^2 / 2$, then $x = q\sqrt{\beta\Omega^2/2}$ and $dx = \sqrt{\beta\Omega^2/2}dq$, so that
\begin{equation}
\label{eq:partition function position}
\int_{-\infty}^\infty dq\exp(-\beta\Omega^2q^2/2) = \dfrac{1}{\sqrt{\beta\Omega^2/2}}\int_{-\infty}^\infty dx\exp(-x^2) = \dfrac{1}{\Omega}\sqrt{\dfrac{2\pi}{\beta}}.
\end{equation}
Next, we solve for the $p$ integrand factor. Let $y^2 = \beta p^2/2m$, then $y = p\sqrt{\beta/2m}$ and $dy = dp\sqrt{\beta/2m}$. Therefore,
\begin{equation}
\label{eq:partition function momentum}
\int_{-\infty}^\infty dp\exp(-\beta p^2/2m) = \sqrt{2m/\beta}\int_{-\infty}^\infty dy\exp(-y^2) = \sqrt{\dfrac{2\pi m}{\beta}}
\end{equation}
Subsittuting \eqref{eq:partition function momentum} and \eqref{eq:partition function position} into $Z$ gives our partition function,
\begin{equation}
\label{eq:partition function}
Z = \dfrac{1}{\Omega}\dfrac{2\pi}{\beta}\sqrt{\dfrac{2\pi m}{\beta}} = \dfrac{2\pi\sqrt{m}}{\Omega\beta}
\end{equation}
This solves the probability density function,
\begin{equation}
\label{eq:probability density}
\rho_\beta = \dfrac{\Omega\beta}{2\pi\sqrt{m}}\exp(-\beta p^2/2m)\exp(-\beta\Omega^2q^2/2).
\end{equation}
We find $\langle q\rangle$:
\begin{align*}
\langle q\rangle &= \dfrac{\Omega\beta}{2\pi\sqrt{m}}\int d\omega\exp(-\beta p^2/2m)q\exp(-\beta\Omega^2q^2/2)\\
&= \dfrac{\Omega\beta}{2\pi\sqrt{m}}\int_{-\infty}^\infty dp[\exp(-\beta p^2/2m)]\int_{-\infty}^\infty dq[q\exp(-\beta\Omega^2q^2/2)],
\end{align*}
but $q\exp(-\beta\Omega^2q^2/2)$ is an odd, integrable function, so $\int_{-\infty}^\infty dq[q\exp(-\beta\Omega^2q^2/2)] = 0$, and $\langle q\rangle = 0$. Similarly, $\langle p\rangle = 0$.

Next, we find $\langle\Omega^2q^2\rangle$:
\begin{align*}
\langle\Omega^2q^2\rangle &= \dfrac{\Omega\beta}{2\pi\sqrt{m}}\int d\omega\exp(-\beta p^2/2m)\Omega^2q^2\exp(-\beta\Omega^2q^2/2)\\
&= \dfrac{\Omega\beta}{2\pi\sqrt{m}}\int_{-\infty}^\infty dp[\exp(-\beta p^2/2m)]\int_{-\infty}^\infty dq[\Omega^2q^2\exp(-\beta\Omega^2q^2/2)]\\
&= \dfrac{\Omega\beta}{2\pi\sqrt{m}}\dfrac{\sqrt{2\pi m}}{\sqrt{\beta}}\int_{-\infty}^\infty dq[\Omega^2q^2\exp(-\beta\Omega^2q^2/2)].
\end{align*}
Let $x^2 = \beta\Omega^2q^2 / 2$, then $x = q\sqrt{\beta\Omega^2/2}$ and $dx = \sqrt{\beta\Omega^2/2}dq$, and
\begin{equation*}
\int_{-\infty}^\infty dq[\Omega^2q^2\exp(-\beta\Omega^2q^2/2)] = \dfrac{1}{\sqrt{\beta^3\Omega^2/2}}\int_{-\infty}^\infty dx[2x^2\exp(-x^2)] = \sqrt{\dfrac{\pi}{\beta^3\Omega^2/2}}.
\end{equation*}
Then,
\begin{equation}
\langle\Omega^2q^2\rangle = \dfrac{1}{\beta} = k_BT.
\end{equation}
By similar methods, we also find $\langle p^2/m\rangle = k_BT$.

Finally, we find $\langle qp\rangle$:
\begin{align*}
\langle qp\rangle &= \dfrac{\Omega\beta}{2\pi\sqrt{m}}\int d\omega p\exp(-\beta p^2/2m)q\exp(-\beta\Omega^2q^2/2)\\
&= \dfrac{\Omega\beta}{2\pi\sqrt{m}}\int_{-\infty}^\infty dp[p\exp(-\beta p^2/2m)]\int_{-\infty}^\infty dq[q\exp(-\beta\Omega^2q^2/2)].
\end{align*}
Since each integral equals zero by symmetry, $\langle qp\rangle = 0$.

\begin{exercise}
Show that the expectations of Equation (7.12) are $\langle q\rangle_h^{[\![ABO]\!]} = \langle p\rangle_h^{[\![ABO]\!]} = 0$.
\end{exercise}

Taking the expectations of (7.12), we have
\begin{align*}
\langle q\rangle &= \langle q\rangle + h\langle p\rangle/m\\
\langle p\rangle &= -\Omega^2he^{-h\gamma}\langle q\rangle + (1 - \Omega^2h^2/m)e^{-h\gamma}\langle p\rangle.
\end{align*}
From the first equation, $\langle p\rangle = 0$. Substituting into the second equation gives $\langle q\rangle = 0$.

\begin{exercise}
Show from example (7.2) that $\mathbb{E}(\mu_{n, 1}q_n) = \mathbb{E}(\mu_{n, 2}q_n) = 0$, $\mathbb{E}(\mu_{n, 1}p_n) = \kappa_1\kappa_3$, $\mathbb{E}(\mu_{n, 1}\mu_{n, 2}) = \kappa_1\kappa_2$, and $\mathbb{E}(\mu_{n, 2}^2) = \kappa_2^2 + \kappa_3^2$.
\end{exercise}

\begin{proof}
The proof is straightforward. We find $\mathbb{E}(\mu_{n, 2}^2)$ as an example:
\begin{equation*}
\mathbb{E}(\mu_{n, 2}^2) = \mathbb{E}((\kappa_2R_n + \kappa_3R_{n+1})^2) = \kappa_2^2 + \kappa_3^2.
\end{equation*}
\end{proof}

