\section{Langevin Dynamics Splitting Scheme}
The equation for Langevin dynamics is
\begin{equation}
\label{eq:langevin dynamics}
	\begin{split}
		d\bm{q} &= \bm{M}^{-1}\bm{p}dt,\\
		d\bm{p} &= -\nabla U(\bm{q})dt - \gamma\bm{p}dt + \sqrt{2\gamma k_BT}\bm{M}^{1/2}d\mathbf{W}.
	\end{split}
\end{equation}
Equation \eqref{eq:langevin dynamics} may be reformulated into the Ito formula,
\begin{equation*}
	d\phi(\bm{q}, \bm{p}) = \nabla\phi\cdot[\bm{a}(\bm{q}, \bm{p})dt + \bm{B}d\mathbf{W}] + \dfrac{1}{2}\mathrm{Tr}[\bm{B}^T\phi''\bm{B}]dt,
\end{equation*}
where
\begin{align*}
	\bm{a}(\bm{q}, \bm{p}) &= (\bm{M}^{-1}\bm{p}, -\nabla U(\bm{q}) - \gamma\bm{p})\\
	\bm{B} &= (0, \sqrt{2\gamma k_BT}M^{1/2}d\mathbf{W}),
\end{align*}
to yield its corresponding generator,
\begin{equation}
\label{eq:langevin dynamics generator}
	\mathcal{L}_\mathrm{LD}\phi = \nabla_q\phi\cdot(\bm{M}^{-1}\bm{p}) + \nabla_p\phi\cdot(-\nabla U(\bm{q})-\gamma\bm{p}) + \gamma k_BT\Delta_M\phi,
\end{equation}
where $\Delta_M = \sum_{i = 1}^{N_C}m_i\dfrac{\partial}{\partial p_i}$ is the mass-weighted Laplacian. We split the generator into three separate components, (I separated the dels from the piecewise operators, because it seems that they were not considered in 7.7.1)
\begin{equation*}
	\mathcal{L}_\mathrm{LD}\phi = \mathcal{L}_A\cdot\nabla_q + \mathcal{L}_B\cdot\nabla_p + \mathcal{L}_O\Delta_M,
\end{equation*}
where operators
\begin{align}
	\mathcal{L}_A &= \bm{M}^{-1}\bm{p},\\
	\mathcal{L}_B &= -\nabla U(\bm{q}),\\
	\mathcal{L}_O &= \gamma\bm{p}\cdot\nabla_p + \gamma k_BT,
\end{align}
mirrors the three splitting parts,
\begin{align}
	\mathcal{U}_h^A(\bm{q}, \bm{p}) &= (\bm{q} + h\bm{M}^{-1}\bm{p}, \bm{p}),\\
	\mathcal{U}_h^B(\bm{q}, \bm{p}) &= (\bm{q}, \bm{p} - h\nabla U(\bm{q})),\\
	\mathcal{U}_h^O(\bm{q}, \bm{p}) &= (\bm{q}, e^{-\gamma h}\bm{p} + \sqrt{k_BT(1 - e^{-2\gamma h})}\bm{M}^{1/2}\mathbf{R}).
\end{align}
Recall that
\begin{equation*}
	e^{t\mathcal{L}_f}\phi = (\mathrm{Id} + t\mathcal{L}_f + \dfrac{t^2}{2}\mathcal{L}_f^2 + \cdots)\phi
\end{equation*}
Since $\mathcal{L}_A = \bm{M}^{-1}\bm{p}$, then
\begin{equation*}
	e^{t\mathcal{L}_A}\phi(\bm{q}, \bm{p}) = (\mathrm{Id} + t\mathcal{L}_A + \cdots)\phi = \phi(\bm{q} + t\bm{M}^{-1}\bm{p}, \bm{p}).
\end{equation*}
Likewise for $\mathcal{L}_B$,
\begin{equation*}
	e^{t\mathcal{L}_B}\phi(\bm{q}, \bm{p}) = \phi(\bm{q}, \bm{p} - t\nabla U(\bm{q})).
\end{equation*}
In the case of $\mathcal{L}_O$,
\begin{align*}
	e^{t\mathcal{L}_O}\phi(\bm{q}, \bm{p}) &= (\mathrm{Id} + t\mathcal{L}_O + \dfrac{t^2}{2}\cdots)\phi\\
	&= ???\\
	&= \int_\mathcal{P}\phi(\bm{q}, e^{-\gamma t} + \xi\bm{M}^{1/2}\bm{x})\dfrac{e^{-\vert\bm{x}\vert^2/2}}{(2\pi)^{\mathrm{N}_c/2}}d\bm{x}.
\end{align*}

