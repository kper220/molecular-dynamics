\noindent\textbf{Constraint equations}: Consider the (1-dimensional) constraint equation,
\begin{equation}
	g(q(t)) = 0.
\end{equation}
Taking a time derivative and substituting $\dot{q} = p/m$ yields
\begin{equation*}
	\dfrac{d}{dt}g(q(t)) = g'(q)p/m = 0,
\end{equation*}
this is the cotangency condition. Taking a second time derivative yields
\begin{align*}
	\dfrac{d}{dt}(g'(q)p/m) &= g''(q)\dot{q}p/m + g'(q)\dot{p}/m\\
	&= g''(q)p^2/m^2 + g'(q)\dot{p}/m\\
	&= 0.
\end{align*}
A generalization of this gives equation (4.10),
\begin{equation}
	\bm{g}'(\bm{q}(t))\bm{M}^{-1}\dot{\bm{p}}(t) + \bm{\phi} = \mathbf{0},
\end{equation}
where $\phi_k = \bm{p}^T\bm{M}^{-1}\nabla^2\bm{g}\bm{M}^{-1}\bm{p}$.

\noindent\textbf{Symplectic structure}: Let $\bm{Z} = (Z_1(t, \bm{z}), \cdots, Z_{2N_c}(t, \bm{z})) = (\bm{q}(t, \bm{z}), \bm{p}(t, \bm{z}))$, where
\begin{equation*}
	\begin{split}
		\bm{q} &= (Z_1, \cdots, Z_{N_c})\\
		\bm{p} &= (Z_{N_c+1}, \cdots, Z_{2N_c}).
	\end{split}
\end{equation*}
Then, $d\bm{Z} =(d\bm{q}, d\bm{p})$ and $\bm{J}d\bm{Z} = (-d\bm{p}, d\bm{q})$, and
\begin{equation*}
	\begin{split}
		d\bm{Z}\wedge\bm{J}d\bm{Z} &= (d\bm{Z})^T\bm{J}d\bm{Z} - (\bm{J}d\bm{Z})^Td\bm{Z}\\
		&= (d\bm{q}, d\bm{p})^T(-d\bm{p}, d\bm{q}) - (-d\bm{p}, d\bm{q})^T(d\bm{q}, d\bm{p})\\
		&= -d\bm{q}d\bm{p} - d\bm{p}d\bm{q} + d\bm{p}d\bm{q} - d\bm{q}d\bm{p}\\
		&= -2d\bm{q}d\bm{p}
	\end{split}
\end{equation*}
