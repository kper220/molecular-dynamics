\section{Symplectic structure with holonomic constraints}
\begin{enumerate}
	\item Define a flow map $\mathcal{F}_t(\bm{z}) = \bm{Z}(t, \bm{z})$ for which $\bm{Z} = (Z_1, \cdots, Z_{2N_c})$ satisfies the symplectic condition
	\begin{equation*}
		d\bm{Z}\wedge\bm{J}d\bm{Z} = d\bm{z}\wedge\bm{J}d\bm{z},
	\end{equation*}
	where $\bm{J}$ is the symplectic structure matrix. Using product rule,
	\begin{equation*}
	\begin{split}
		\dfrac{d}{dt}(d\bm{Z}\wedge\bm{J}d\bm{Z}) &= \dfrac{d}{dt}(d\bm{Z})\wedge\bm{J}d\bm{Z} + d\bm{Z}\wedge\dfrac{d}{dt}(\bm{J}d\bm{Z})\\
		&= \dfrac{d}{dt}(d\bm{Z})\wedge\bm{J}d\bm{Z} + d\bm{Z}\wedge\bm{J}\dfrac{d}{dt}(d\bm{Z})\\
		&= 0,
	\end{split}
	\end{equation*}
	Since $\bm{z}$ does not depend on time. Assume that $\dfrac{d}{dt}(d\bm{Z}) = d\dot{\bm{Z}}$. Then
	\begin{equation*}
		\dfrac{d}{dt}(d\bm{Z}\wedge\bm{J}d\bm{Z}) = d\dot{\bm{Z}}\wedge\bm{J}d\bm{Z} + d\bm{Z}\wedge\bm{J}d\dot{\bm{Z}} = 0.
	\end{equation*}
	\begin{interpretation}
		The vector $\bm{z}$ represents a preset configuration of entries $q_i$ and $p_i$, and is independent of time.
	\end{interpretation}
\end{enumerate}

